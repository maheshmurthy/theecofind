<div class="title-bar">Reset Password</div>
<div class="static-content">
Please enter your email id to begin the password reset process
<% form_tag password_resets_path do %>
  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag "email", nil, :class => 'textbox-style' %><br />
  </p>
  <%= submit_tag "Reset", :class => 'search-button' %>
<% end %>
</div>
