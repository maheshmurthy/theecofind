<div class="title-bar">Login</div>
 
<div class="static-content">
<% form_for @user_session do |f| %>
  <%= f.error_messages %>
  <%= f.label :username %><br />
  <%= f.text_field :username, :class => 'textbox-style' %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password, :class => 'textbox-style' %><br />
  <%= link_to 'Forgot password', new_password_reset_path %>
  <div style="margin-top: 15px;">
  <%= f.submit "Login", :class => 'search-button' %>
  </div>
<% end %>
</div>
